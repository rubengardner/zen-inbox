{
  "compilerOptions": {
    "baseUrl": "./src",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "react",
      "react-dom"
    ],
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",
    "src/css.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
